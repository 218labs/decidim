<div class="reveal" data-reveal id="budget-excess">
  <div class="reveal__header">
    <h3 class="reveal__title"><%= maximum_budget_projects_enabled? ? t(".projects_excess.title") : t(".budget_excess.title") %></h3>
    <button class="close-button" data-close aria-label="<%= t(".close") %>" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <p><%= maximum_budget_projects_enabled? ? t(".projects_excess.description") : t(".budget_excess.description") %></p>
  <div class="row">
    <div class="columns medium-8 medium-offset-2">
      <button data-close class="button expanded"><%= t(".ok") %></button>
    </div>
  </div>
</div>
