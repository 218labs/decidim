version: '2'
services:
  app:
    build: '.'
    working_dir: /code
    volumes:
      - .:/code
    environment:
      - DB_HOST=pg
      - REDIS_HOST=redis
    ports:
      - 3000:3000
    links:
      - pg
      - redis
  pg:
    image: postgres
    volumes:
      - pg-data:/var/lib/postgresql/data
  redis:
    image: redis
    volumes:
      - redis-data:/data
volumes:
  pg-data: {}
  redis-data: {}
