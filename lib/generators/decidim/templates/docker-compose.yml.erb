version: '2'
services:
  app:
    build: '.'
    working_dir: /code
    volumes:
      - .:/code
    environment:
      - DATABASE_URL=postgresql://pg/<%= app_name %>_development?pool=5
      - REDIS_URL=redis://redis:6379/1
    ports:
      - 3000:3000
    links:
      - pg
      - redis
  pg:
    image: postgres
    volumes:
      - pg-data:/var/lib/postgresql/data
  redis:
    image: redis
    volumes:
      - redis-data:/data
volumes:
  pg-data: {}
  redis-data: {}
